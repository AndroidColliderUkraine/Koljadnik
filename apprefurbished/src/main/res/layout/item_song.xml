<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/common_padding_medium"
    android:background="@drawable/background_for_songs">

    <TextView
        android:id="@+id/tv_item_song_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="@dimen/text_medium"
        android:textColor="@color/text_color"/>

    <ImageView
        android:id="@+id/iv_item_song_rating"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/finger_size_half"
        android:layout_gravity="right"
        android:textColor="@color/edit_text_white_color"/>
</LinearLayout>