<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    tools:context="com.androidcollider.koljadnik.SubmitActivity">


    <Spinner
        android:id="@+id/spinner_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/background_for_sort_types"
        android:textColor="@color/element_color" />

    <TextView
        android:id="@+id/tv_submit_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_for_sort_types"
        android:padding="10dp"
        android:text="Додади пісню"
        android:textColor="@color/text_color"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/et_submit_field"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tv_submit_type"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/background_for_big_text"
        android:gravity="start"
        android:hint="@string/pishit_sudi"
        android:inputType="textMultiLine"
        android:padding="10dp"
        android:textColor="@color/text_color" />

    <Button
        android:id="@+id/b_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_ac_bar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:background="@drawable/background_for_sort_types"
        android:padding="10dp"
        android:text="@string/nadislaty_rozrobniku"
        android:textColor="@color/text_color" />

    <TextView
        android:id="@+id/tv_ac_bar"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@color/action_bar_color"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/android_collider_company"
        android:textColor="@color/text_color"
        android:textSize="15dp" />

    <ListView
        android:id="@+id/lv_submit_types"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_submit_type"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/background_for_bg_for_sort_types"
        android:divider="@android:color/transparent"
        android:dividerHeight="3dp"
        android:headerDividersEnabled="false"
        android:visibility="gone" />
</LinearLayout>
